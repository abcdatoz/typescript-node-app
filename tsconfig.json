{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,    
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": ["src/**/*", "@types/express.d.ts"],
  "exclude": ["node_modules"]
}
